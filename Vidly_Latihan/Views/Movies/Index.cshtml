@model IEnumerable<Vidly_Latihan.Models.Movie>
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Index</h2>

@if (!Model.Any())
{
    <p>No Movies can be borrowed</p>
}
else
{
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.name</td>
            </tr>
        }
    </tbody>
</table>
}

